@* Recipe add form, English UI *@
@using RecipeMvc.Data
@using RecipeMvc.Aids
@model dynamic
@if (Model != null && Model.SelectedDay != null && Model.Date != null && Model.Recipes != null)
{
    <form asp-action="AddToDay" method="post" class="mb-4">
        <input type="hidden" name="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="day" value="@Model.SelectedDay" />
        <div class="row mb-2">
            <div class="col">
                <select name="recipeId" class="form-select">
                    @if (Model.Recipes.Count == 0)
                    {
                        <option value="">No recipes available</option>
                    }
                    else
                    {
                        @foreach (var r in Model.Recipes)
                        {
                            <option value="@r.Id">@r.Title</option>
                        }
                    }
                </select>
            </div>
            <div class="col">
                <select name="mealType" class="form-select">
                    @foreach (var type in Enum.GetValues(typeof(MealType)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
            <div class="col">
                <button class="btn btn-success" type="submit">Add</button>
            </div>
        </div>
    </form>
}
