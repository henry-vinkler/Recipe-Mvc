@model IEnumerable<RecipeView>
@using RecipeMvc.Core.Editors
@using RecipeMvc.Facade

@{
    ViewData["Title"] = "Recipes";
}

<h2>Recipes</h2>

<form asp-action="Index" method="get" class="mb-4">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Otsi retsepti..." class="form-control" />
</form>

<a asp-action="Create" class="btn btn-primary mb-4">Create New</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var recipe in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm position-relative">
                <img src="@recipe.ImagePath" class="card-img-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;">

                <div class="position-absolute top-0 end-0 m-2">
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            ⋮
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@recipe.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@recipe.Id">Details</a></li>
                            <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@recipe.Id">Delete</a></li>
                        </ul>
                    </div>
                </div>

                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title mb-0">@recipe.Title</h5>
                        <form asp-action="ToggleFavorite" method="post" class="mb-0">
                            <input type="hidden" name="id" value="@recipe.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">❤️</button>
                        </form>
                    </div>
                    <p class="card-text text-muted">@recipe.Calories kcal</p>
                </div>
            </div>
        </div>
    }
</div>


