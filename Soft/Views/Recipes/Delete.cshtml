@model RecipeMvc.Facade.Recipe.RecipeView

@{
    ViewData["Title"] = "Delete Recipe";
}

<h2>Delete Recipe</h2>

<h3>Are you sure you want to delete this recipe?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.Calories.ToString("N0") kcal</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">@Model.Tags</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
