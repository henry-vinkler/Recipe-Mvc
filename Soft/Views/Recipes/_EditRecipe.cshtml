@using RecipeMvc.Core.Editors
@using RecipeMvc.Core
@using RecipeMvc.Domain
@using RecipeMvc.Soft.Data
@model RecipeMvc.Facade.RecipeView

@{
	var authors = await Services.Get<IUserAccountRepo>()?.GetAsync()! ?? [];
	authors = authors.OrderBy(p => p.Username).ToList();
	var selectAuthor = new SelectList(authors, "Id", "Username", Model.AuthorId);
}

@Html.SelectFor(x => x.AuthorId, "authors")
@Html.InputFor(x => x.Title)
@Html.InputFor(x => x.Description)
@Html.InputFor(x => x.ImagePath)
@Html.InputFor(x => x.Calories)
@Html.InputFor(x => x.Tags)
