@model IEnumerable<RecipeMvc.Facade.ShoppingListView>
@{
    ViewData["Title"] = "Shopping Lists";
}

<h1 class="display-4 fw-bold text-primary mb-4">Shopping Lists</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">+ Create New</a>
</p>
<form method="get" class="mb-3">
    <input type="text" name="search" placeholder="Search by name..." value="@Context.Request.Query["search"].ToString()"
           class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-outline-primary ms-2">Search</button>
</form>
<table class="table table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Notes</th>
            <th>Is Checked</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Notes</td>
                <td>@item.IsChecked</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
