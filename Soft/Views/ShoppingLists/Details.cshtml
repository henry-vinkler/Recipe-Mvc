@model RecipeMvc.Facade.ShoppingListView

@{
    ViewData["Title"] = "Details";
}

<h1>Shopping List Details</h1>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>

        <dt class="col-sm-2">Checked</dt>
        <dd class="col-sm-10">@Model.IsChecked</dd>
    </dl>
</div>

@if (Model.Ingredients != null && Model.Ingredients.Any())
{
    <h4>Ingredients</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Checked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ingredients)
            {
                <tr>
                    <td>@item.IngredientName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unit</td>
                    <td><input type="checkbox" disabled @(item.IsChecked ? "checked" : "") /></td>
                </tr>
            }
        </tbody>
    </table>
}
else
@if (Model.Ingredients != null && Model.Ingredients.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ingredient</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Checked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ingredients)
            {
                <tr>
                    <td>@item.IngredientName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unit</td>
                    <td>@item.IsChecked</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No ingredients found.</p>
}
