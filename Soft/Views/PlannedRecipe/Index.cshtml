@model IEnumerable<PlannedRecipeView>
@using RecipeMvc.Data
@using RecipeMvc.Aids
@{
    ViewData["Title"] = "Planned Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var date = (DateTime)ViewBag.Date;
    var recipes = ViewBag.AllRecipes as List<RecipeData> ?? new List<RecipeData>();
    var selectedDay = ViewBag.Day as Days?;
    var currentFilter = ViewBag.CurrentFilter as string;
}

<h2>@date.ToShortDateString()</h2>

<form asp-action="Index" method="get" class="mb-3">
    <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
    <input type="text" name="searchString" value="@currentFilter" placeholder="Search by recipe or meal type" class="form-control d-inline w-auto" style="width: 250px; display: inline-block;" />
    <button type="submit" class="btn btn-outline-secondary btn-sm ms-2">Search</button>
</form>

<nav aria-label="Day navigation" class="mb-3">
    <ul class="pagination justify-content-center">
        @foreach (Days day in Enum.GetValues(typeof(Days)))
        {
            var isActive = selectedDay.HasValue && selectedDay.Value == day;
            <li class="page-item @(isActive ? "active" : "")">
                <form asp-action="Index" method="get" style="display:inline;">
                    <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
                    <input type="hidden" name="day" value="@day" />
                    @if (!string.IsNullOrEmpty(currentFilter)) { <input type="hidden" name="searchString" value="@currentFilter" /> }
                    <button type="submit" class="page-link">@day</button>
                </form>
            </li>
        }
    </ul>
</nav>

@if (selectedDay.HasValue)
{
    <form asp-action="AddToDay" method="post" class="mb-4">
        <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="day" value="@selectedDay.Value" />
        <div class="row mb-2">
            <div class="col">
                <select name="recipeId" class="form-select">
                    @if (recipes.Count == 0)
                    {
                        <option value="">No recipes available</option>
                    }
                    else
                    {
                        @foreach (var r in recipes)
                        {
                            <option value="@r.Id">@r.Title</option>
                        }
                    }
                </select>
            </div>
            <div class="col">
                <select name="mealType" class="form-select">
                    @foreach (var type in Enum.GetValues(typeof(MealType)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
            <div class="col">
                <button class="btn btn-success" type="submit">Lisa</button>
            </div>
        </div>
    </form>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No planned recipes for this day.</div>
}
else
{
    <div class="row">
        @foreach (var planned in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@planned.RecipeTitle</h5>
                        <p class="card-text text-muted">@planned.MealType</p>
                        <p class="card-text"><small class="text-muted">@planned.Day</small></p>
                        <form asp-action="RemoveFromDay" method="post">
                            <input type="hidden" name="id" value="@planned.Id" />
                            <input type="hidden" name="date" value="@planned.DateOfMeal.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="day" value="@planned.Day" />
                            <button type="submit" class="btn btn-danger w-100">Eemalda</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}



