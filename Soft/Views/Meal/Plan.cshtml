@model RecipeMvc.Facade.MealView
@using RecipeMvc.Aids.Enums

@{
    ViewData["Title"] = "Planeeri toitumiskava";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SelectDay" method="post">
    <table class="table table-bordered">
        <thead class="table-success"><tr><th>PÃ¤ev</th></tr></thead>
        <tbody>
        @foreach (var day in Model.WeekDays!)
        {
            <tr>
                <td>
                    <button type="submit" name="SelectedDayId" value="@day.Id"
                            class="btn @(Model.SelectedDayId == day.Id ? "btn-primary" : "btn-outline-secondary") w-100">
                        @day.Day
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>

@if (Model.SelectedDayId != null)
{
    <form asp-action="AssignRecipeToDay" method="post">
        <input type="hidden" name="SelectedDayId" value="@Model.SelectedDayId" />
        <table class="table table-bordered">
            <thead class="table-success"><tr><th>Retseptid</th></tr></thead>
            <tbody>
            @foreach (var meal in Model.Recipes!)
            {
                <tr>
                    <td>
                        <button type="submit" name="SelectedRecipeId" value="@meal.Id" class="btn btn-outline-success w-100">
                            @(meal.Recipe?.Title ?? "Nimetu")
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </form>
}
