@using RecipeMvc.Data
@using RecipeMvc.Aids

@model IEnumerable<PlannedRecipeView>
@{
    ViewData["Title"] = "PÃ¤eva toitumiskava";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var date = (DateTime)ViewBag.Date;
    var recipes = ViewBag.AllRecipes as List<RecipeData> ?? new List<RecipeData>();
    var selectedDay = ViewBag.Day as Days?;
}

<h2>@date.ToShortDateString()</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Day</th>
            <th>Recipe</th>
            <th>Meal Type</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (Days day in Enum.GetValues(typeof(Days)))
        {
            var isActive = selectedDay.HasValue && selectedDay.Value == day;
            <tr class="@(isActive ? "table-active" : "")">
                <td>
                    <form asp-action="DayView" method="get" style="display:inline;">
                        <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="day" value="@day" />
                        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">@day</button>
                    </form>
                </td>
                <td colspan="3">
                    @if (isActive)
                    {
                        <form asp-action="AddToDay" method="post" class="d-inline">
                            <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="day" value="@day" />
                            <div class="row mb-3">
                                <div class="col">
                                    <select name="recipeId" class="form-select">
                                        @if (recipes.Count == 0)
                                        {
                                            <option value="">No recipes available</option>
                                        }
                                        else
                                        {
                                            @foreach (var r in recipes)
                                            {
                                                <option value="@r.Id">@r.Title</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col">
                                    <select name="mealType" class="form-select">
                                        @foreach (var type in Enum.GetValues(typeof(MealType)))
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                </div>
                                <div class="col">
                                    <button class="btn btn-success" type="submit">Lisa</button>
                                </div>
                            </div>
                        </form>
                    }
                </td>
            </tr>
            var plannedForDay = Model.Where(p => p.Day == day.ToString()).ToList();
            foreach (var planned in plannedForDay)
            {
                <tr>
                    <td></td>
                    <td>@planned.RecipeTitle</td>
                    <td>@planned.MealType</td>
                    
                    <td>
                        @if (isActive)
                        {
                            <form asp-action="_EditMeal" method="get" style="display:inline;">
                                <input type="hidden" name="id" value="@planned.Id" />
                                <button type="submit" class="btn btn-primary btn-sm">Muuda</button>
                            </form>
                            <form asp-action="RemoveFromDay" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@planned.Id" />
                                <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="day" value="@day" />
                                <button type="submit" class="btn btn-danger btn-sm">Eemalda</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>